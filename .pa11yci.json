{
  "defaults": {
    "hideElements": "iframe,object",
    "hideSvgPaths": true
  },
  "urls": [
    {
      "url": "https://kokimo1.github.io/webhook-test/${{ github.event.pull_request.number }}",
      "threshold": "warn"
    }
  ],
  "pa11y-ci": {
    "standard": "WCAG2AAA",
    "level": "error",
    "timeout": 60000,
    "hideElements": "iframe,object",
    "hideSvgPaths": true
  },
  "github": {
    "token": "${{ secrets.A11Y_LINTER_TOKEN }}",
    "pullRequest": {
      "number": "${{ github.event.pull_request.number }}"
    },
    "reporter": "github-pr-check"
  },
  "chromeLaunchConfig": {
    "executablePath": "/usr/bin/google-chrome-stable",
    "chromeFlags": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  }
}
